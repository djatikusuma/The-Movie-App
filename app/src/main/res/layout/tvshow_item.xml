<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.codekinian.themovieapps.utils.DateUtils" />

        <variable
            name="tv"
            type="com.codekinian.themovieapps.model.data.Tvshow" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_10"
        android:layout_marginEnd="@dimen/dimens_10"
        app:cardCornerRadius="@dimen/dimens_10"
        app:cardElevation="@dimen/content_margin_small"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:contentDescription="@{tv.title}"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{tv.poster_path}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/dimension_18">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimension_18"
                    android:layout_marginTop="@dimen/dimension_18"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dimens_10"
                        android:layout_marginTop="@dimen/content_margin_small"
                        android:layout_marginEnd="@dimen/dimens_10"
                        android:layout_marginBottom="@dimen/content_margin_small"
                        android:layout_weight="0.4"
                        android:background="@drawable/gradient_accent_color"
                        android:gravity="center"
                        android:text="@{tv.vote_average}"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_movie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@{tv.title}"
                            android:textAllCaps="true"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/release_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{DateUtils.humanDate(tv.release_date)}"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimension_18"
                    android:layout_marginTop="@dimen/dimens_10"
                    android:maxLines="7"
                    android:text="@{tv.overview.length() > 80 ? tv.overview.substring(0, 80) + `...` : tv.overview}" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>